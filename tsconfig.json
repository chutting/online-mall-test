{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": ["./src"],
  "exclude": [
    "/node_modules/",
    "**/__tests__/**/*.[jt]s?(x",
    "**/(*.)(spec|test).[tj]s?(x)"
  ]
}
